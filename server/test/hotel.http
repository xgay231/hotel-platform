@baseUrl = http://localhost:4000

#############################################
# 查询 API
#############################################

#############################################
# 1. 获取酒店列表
#############################################
GET {{baseUrl}}/api/hotels

#############################################
# 2. 获取酒店详情（含房型）
#############################################
GET {{baseUrl}}/api/hotels/hotel_004

#############################################
# 上传 API
#############################################

#############################################
# 3. 创建酒店（上传酒店详情）
#############################################
POST {{baseUrl}}/api/hotels
Content-Type: application/json

{
  "hotel_id": "hotel_005",
  "name_cn": "深圳湾科技园酒店",
  "name_en": "Shenzhen Bay Science Park Hotel",
  "star": 4,
  "address": "广东省深圳市南山区科技园南区",
  "open_time": "2022-01",
  "cover_image": "https://example.com/hotel4.png",
  "desc": "位于深圳湾科技园核心区域，周边科技企业云集，商务出行首选。",
  "min_price": 399,
  "quick_flag": "商务、免费WiFi、会议室",
  "province": "广东",
  "city": "深圳",
  "image_url": "https://example.com/banner4.png"
}

#############################################
# 4. 创建房型（上传房型信息）
#############################################
POST {{baseUrl}}/api/hotels/hotel_005/rooms
Content-Type: application/json

{
  "room_id": "room_002",
  "name": "标准大床房",
  "price": 399,
  "desc": "20㎡，大床1.8米，含单早"
}

#############################################
# 5. 创建房型 - 第二个房型
#############################################
POST {{baseUrl}}/api/hotels/hotel_005/rooms
Content-Type: application/json

{
  "room_id": "room_003",
  "name": "商务套房",
  "price": 699,
  "desc": "35㎡，大床2.0米，含双早"
}