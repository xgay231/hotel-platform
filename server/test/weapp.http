@baseUrl = http://localhost:4000

#############################################
# weapp API 测试用例
#############################################

#############################################
# 1. Banner 列表（正常场景）
#############################################
GET {{baseUrl}}/api/weapp/banners

#############################################
# 2. Banner 列表（空数据场景：使用独立测试库时验证）
#############################################
GET {{baseUrl}}/api/weapp/banners

#############################################
# 3. 酒店列表（基础查询）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=1&pageSize=10&province=广东&city=深圳&keyword=酒店

#############################################
# 4. 酒店列表（高级筛选）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=1&pageSize=10&minPrice=200&maxPrice=800&starLevel=4&tags=商务,近地铁

#############################################
# 5. 酒店列表（排序：价格升序）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=1&pageSize=10&sortBy=priceAsc

#############################################
# 6. 酒店列表（排序：价格降序）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=1&pageSize=10&sortBy=priceDesc

#############################################
# 7. 酒店列表（排序：评分降序）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=1&pageSize=10&sortBy=ratingDesc

#############################################
# 8. 酒店列表（非法参数：page）
#############################################
GET {{baseUrl}}/api/weapp/hotels?page=0&pageSize=10

#############################################
# 9. 酒店列表（非法参数：price 区间）
#############################################
GET {{baseUrl}}/api/weapp/hotels?minPrice=900&maxPrice=100

#############################################
# 10. 酒店详情（正常场景）
#############################################
GET {{baseUrl}}/api/weapp/hotels/3d552a4b-ce41-4131-bcb2-c1de7de79533

#############################################
# 11. 酒店详情（404 场景）
#############################################
GET {{baseUrl}}/api/weapp/hotels/not_exists_hotel_id

