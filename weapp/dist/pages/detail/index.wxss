  font-size: 24rpx;
  color: #666;
}

.hotel-base-info .hotel-address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.hotel-room-types {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

