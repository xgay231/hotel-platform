  margin-bottom: 10rpx;
}

.hotel-base-info .hotel-name-cn {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.hotel-base-info .hotel-name-en {
