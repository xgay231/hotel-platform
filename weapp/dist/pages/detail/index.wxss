  font-size: 28rpx;
  color: #e64340;
  font-weight: 500;
}

.hotel-room-types .room-list .room-item .room-right .room-unit {
  font-size: 22rpx;
  color: #999;
}

.hotel-room-types .room-list .room-item .room-right .book-room-btn {
  background-color: #409eff;
  color: #fff;
  border: none;
  padding: 5rpx 15rpx;
  font-size: 22rpx;
}

.hotel-facilities {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
